<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="6dp"
    android:paddingBottom="40dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@drawable/chache_window"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="IMEI:5207221333"
            android:textColor="#333"
            android:textSize="14sp"
            android:id="@+id/text_carunmb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/text_carunmb"
            android:layout_marginTop="2dp"
            android:textColor="#666"
            android:textSize="14sp"
            android:text="设备名：G11A-221333"
            android:id="@+id/text_carimei"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView

            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:id="@+id/image_elec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginRight="60dp"
            android:src="@drawable/icon_chache_xh1"
            android:layout_alignParentRight="true"
            android:id="@+id/image_gsm"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/image_sp"
            android:src="@drawable/icon_chache_speed"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:textColor="#666"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:text="0km/h"
            android:layout_centerVertical="true"
            android:id="@+id/text_sp"
            android:layout_toRightOf="@+id/image_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="right"
            android:textColor="#666"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/text_v"
            android:layout_toRightOf="@+id/text_sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/image_lt"
            android:src="@drawable/icon_cllb_time"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:textColor="#666"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/text_ltime"
            android:layout_toRightOf="@+id/image_lt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView

            android:layout_centerVertical="true"
            android:id="@+id/image_nt"
            android:src="@drawable/icon_cllb_riqi"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:textColor="#666"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:text="2017-01-23 21:59:01"
            android:layout_centerVertical="true"
            android:id="@+id/text_ntimes"
            android:layout_toRightOf="@+id/image_nt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/image_nl"
            android:src="@drawable/icon_cllb_weizhi"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:singleLine="false"
            android:ellipsize="end"
            android:textColor="#666"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:text="广东省湛江市霞山区海景路275号/车之屋汽车服务中心附近9米左右"
            android:layout_centerVertical="true"
            android:id="@+id/text_nlocas"
            android:layout_toRightOf="@+id/image_nl"
            android:layout_width="210dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_mapstate"
            android:gravity="center"
            android:layout_weight="3"
            android:textColor="#ff9913"
            android:textSize="12sp"
            android:text="ACC: 熄火"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text_mapgps"
            android:gravity="center"
            android:layout_weight="3"
            android:textColor="#ff9913"
            android:textSize="12sp"
            android:text="定位: GPS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text_mapfar"
            android:gravity="center"
            android:layout_weight="2"
            android:textColor="#ff9913"
            android:textSize="12sp"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:background="#333"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:padding="2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="28dp">
        <Button
            android:id="@+id/win_btn_msg"
            android:layout_marginRight="6dp"
            android:textColor="#fff"
            android:text="信息"
            android:layout_weight="1"
            android:background="@drawable/bg_win_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/win_btn_trace"
            android:layout_marginRight="6dp"
            android:textColor="#fff"
            android:text="追踪"
            android:layout_weight="1"
            android:background="@drawable/bg_win_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/win_btn_back"
            android:layout_marginRight="6dp"
            android:textColor="#fff"
            android:text="回放"
            android:layout_weight="1"
            android:background="@drawable/bg_win_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/win_btn_set"
            android:layout_marginRight="6dp"
            android:textColor="#fff"
            android:text="设置"
            android:layout_weight="1"
            android:background="@drawable/bg_win_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>