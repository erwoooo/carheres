<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageView
            android:padding="4dp"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:id="@+id/image_quitmore"
            android:src="@drawable/icon_taiya_return"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="#333"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:text="超速报警"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>
    <View
        android:background="#666"
        android:layout_width="match_parent"
        android:layout_height="1px">
    </View>

    <RelativeLayout
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textColor="#333"
            android:textSize="16sp"
            android:text="超速报警"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Switch
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/switch_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:background="#666"
        android:layout_width="match_parent"
        android:layout_height="1px">
    </View>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linerlayout_morespeed"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/image_moreaboveless"
                android:src="@drawable/icon_taiya_subtract"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <SeekBar
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/image_moreaboveless"
                android:progressDrawable="@drawable/bg_bar"
                android:splitTrack="false"
                android:max="180"
                android:progress="0"
                android:thumb="@drawable/theme_bar"
                android:id="@+id/seekbar_moreabove"
                android:thumbOffset="0dp"
                android:layout_width="170dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/seekbar_moreabove"
                android:layout_marginLeft="6dp"
                android:id="@+id/image_moreabovecount"
                android:src="@drawable/icon_taiya_add"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/text_above"
                android:gravity="center_horizontal"
                android:text="范围：0s"
                android:textSize="16sp"
                android:textColor="#666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="#666666"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/image_disaboveless"
                android:src="@drawable/icon_taiya_subtract"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <SeekBar
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/image_disaboveless"
                android:progressDrawable="@drawable/bg_bar"
                android:splitTrack="false"
                android:max="120"
                android:progress="0"
                android:thumb="@drawable/theme_bar"
                android:id="@+id/seekbar_disabove"
                android:thumbOffset="0dp"
                android:layout_width="170dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/seekbar_disabove"
                android:layout_marginLeft="6dp"
                android:id="@+id/image_disabovecount"
                android:src="@drawable/icon_taiya_add"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/text_disabove"
                android:gravity="center_horizontal"
                android:text="范围：0 km/h"
                android:textSize="16sp"
                android:textColor="#666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="#666666"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>







        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/button_more"
            android:background="@drawable/btnensure_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>



</LinearLayout>