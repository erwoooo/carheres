<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:textColor="#111"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:text="请选择以下类型:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <RadioGroup
    android:id="@+id/radio_location"
    android:layout_marginLeft="120dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RadioButton
        android:id="@+id/button_bd"
        android:checked="true"
        android:text="北斗"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RadioButton
        android:id="@+id/button_wx"
        android:text="卫星定位"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RadioButton
        android:id="@+id/button_wifi"
        android:text="WIFI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RadioButton

        android:id="@+id/button_lbs"
        android:text="LBS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RadioGroup>

    <RelativeLayout
        android:padding="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
            <Button
                android:background="@drawable/btn_type_selector"
                android:text="取消"
                android:id="@+id/button_loca_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn_type_selector"
                android:layout_toRightOf="@+id/button_loca_cancel"
                android:id="@+id/button_loca_sure"
                android:text="确定"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>