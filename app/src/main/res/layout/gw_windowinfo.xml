<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:background="@mipmap/timepicker"
    android:padding="26dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <NumberPicker
            android:layout_weight="1"
            android:id="@+id/number_pickhour"
            android:background="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            ></NumberPicker>

        <NumberPicker
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/number_pickhour"
            android:id="@+id/number_pickmin"
            android:background="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            ></NumberPicker>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_width="100dp"
        android:layout_height="20dp">
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:id="@+id/gw_text_cancel"
            android:text="取消"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/gw_text_cancel"
            android:background="#f90"
            android:layout_width="2px"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/gw_text_do"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/gw_text_cancel"
            android:text="完成"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>