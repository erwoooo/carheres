<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageView
            android:padding="4dp"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:id="@+id/image_quitpass"
            android:src="@drawable/icon_taiya_return"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="#333"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:text="修改密码"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>
    <View
        android:background="#666"
        android:layout_width="match_parent"
        android:layout_height="1px">
    </View>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/lin_pwd_sucs"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_marginTop="40dp"
            android:src="@drawable/icon_pwd_tip"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="您已成功更改密码，请使用新密码登录。"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/text_re_login"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/text_shape_qd"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="重新登录"
            android:layout_width="200dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_pwd_edit"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <View
            android:background="#666"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>
        <RelativeLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="#eee"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <View
                android:background="#666"
                android:layout_width="1px"
                android:layout_height="match_parent"></View>
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:id="@+id/image_once"
                android:src="@drawable/icon_user_password"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <EditText
                android:password="true"
                android:textColor="#333"
                android:paddingLeft="6dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/image_once"
                android:textSize="16sp"
                android:layout_marginLeft="8dp"
                android:id="@+id/edit_once"
                android:hint="请输入旧密码"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <View
                android:layout_alignParentEnd="true"
                android:background="#666"
                android:layout_width="1px"
                android:layout_height="match_parent"></View>
        </RelativeLayout>
        <View
            android:background="#666"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>
        <RelativeLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="#eee"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <View
                android:background="#666"
                android:layout_width="1px"
                android:layout_height="match_parent"></View>
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:id="@+id/image_twice"
                android:src="@drawable/icon_user_password"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <EditText
                android:password="true"
                android:textColor="#333"
                android:background="@null"
                android:paddingLeft="6dp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/image_twice"
                android:textSize="16sp"
                android:layout_marginLeft="8dp"
                android:id="@+id/edit_twice"
                android:hint="请输入新密码"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <View
                android:layout_alignParentEnd="true"
                android:background="#666"
                android:layout_width="1px"
                android:layout_height="match_parent"></View>
        </RelativeLayout>
        <View
            android:background="#666"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>

    </LinearLayout>
    <Button
        android:layout_marginTop="44dp"
        android:id="@+id/button_editpass"
        android:background="@drawable/btnensure_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>