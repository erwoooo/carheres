<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:padding="4dp"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:id="@+id/image_quitmacth"
            android:src="@drawable/icon_taiya_return"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="#333"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:text="蓝牙配网"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        android:background="#666"
        android:layout_width="match_parent"
        android:layout_height="1px">
    </View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_activity"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/loading"
            android:layout_width="150dp"
            android:layout_height="150dp" />
        <TextView
            android:id="@+id/text_tip"
            android:textColor="#666"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/image_activity"
            android:text="点击查找设备"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="20dp"
            android:background="#666"
            android:layout_below="@+id/text_tip"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:id="@+id/relative_match"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/text_tip"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_marginLeft="80dp"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="#333"
                    android:text="设备名"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <View
                    android:layout_centerInParent="true"
                    android:background="#d2d2d2"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_marginRight="80dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="#333"
                    android:text="MAC地址"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </RelativeLayout>
            <View
                android:background="#666"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <android.support.v7.widget.RecyclerView
                android:layout_weight="1"
                android:id="@+id/recycleview_match"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>


            <View
                android:layout_below="@+id/relative_match"
                android:background="#666"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <RelativeLayout
                android:layout_weight="2"
                android:layout_below="@+id/relative_match"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/match_text_research"
                    android:layout_marginLeft="40dp"
                    android:gravity="center"
                    android:background="@drawable/bg_textbuttpn"
                    android:textColor="#fff"
                    android:text="开始查找"
                    android:layout_width="100dp"
                    android:layout_height="30dp" />

                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/match_text_surebind"
                    android:layout_marginRight="40dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:background="@drawable/bg_textbuttpn"
                    android:textColor="#fff"
                    android:text="确认绑定"
                    android:layout_width="100dp"
                    android:layout_height="30dp" />

            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>