<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageView
            android:padding="4dp"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:id="@+id/image_quitabout"
            android:src="@drawable/icon_taiya_return"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/title_text"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="#333"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"

            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        android:background="#666"
        android:layout_width="match_parent"
        android:layout_height="1px">
    </View>

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/about_logo"
            android:layout_width="170dp"
            android:layout_height="86dp"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/relative_use"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="62dp">
            <TextView
                android:id="@+id/text_use"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:text="APP使用说明"
                android:textColor="#333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:background="#666"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>
      <RelativeLayout
          android:layout_marginLeft="10dp"
          android:layout_width="match_parent"
          android:layout_height="62dp">
          <TextView
              android:id="@+id/text_varsions"
              android:textSize="16sp"
              android:layout_centerVertical="true"
              android:text="软件版本:"
              android:textColor="#333"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <TextView
              android:layout_marginLeft="6dp"
              android:id="@+id/text_varsionumber"
              android:textSize="16sp"
              android:layout_centerVertical="true"
              android:layout_toRightOf="@+id/text_varsions"
              android:textColor="#999"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />

          <TextView
              android:layout_marginRight="10dp"
              android:layout_alignParentRight="true"
              android:id="@+id/text_varsion_update"
              android:textSize="16sp"
              android:layout_centerVertical="true"
              android:text="已是最新版本"
              android:textColor="#666"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />

      </RelativeLayout>
        <View
            android:background="#666"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="62dp">
            <TextView
                android:id="@+id/text_public"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:text="微信公众号:"
                android:textColor="#333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="6dp"
                android:id="@+id/text_weixin"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/text_public"

                android:textColor="#999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:background="#666"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>


        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="62dp">
            <TextView
                android:id="@+id/text_web"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:text="平台网站:"
                android:textColor="#333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="6dp"
                android:id="@+id/text_weburl"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/text_web"

                android:autoLink="web"
                android:textColor="#999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:background="#666"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>
    </LinearLayout>
</LinearLayout>