<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageView
            android:padding="4dp"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:id="@+id/image_tyreorderquit"
            android:src="@drawable/icon_taiya_return"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="#333"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:text="胎压指令"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
<View
    android:background="#666"
    android:layout_width="match_parent"
    android:layout_height="1px">
</View>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout

            android:id="@+id/relative_temps"
            android:orientation="horizontal"
            android:background="@drawable/bg_selector"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_zhiling_wendu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView1" />

            <TextView
                android:gravity="center"
                android:textColor="#333"
                android:textSize="16sp"
                android:text="温度阀值"
                android:layout_toRightOf="@+id/imageView1"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:id="@+id/textView" />
        </RelativeLayout>
        <View
            android:background="#666"
            android:layout_width="match_parent"
            android:layout_height="1px">
        </View>

        <RelativeLayout
            android:id="@+id/relative_tyre"
            android:orientation="horizontal"
            android:background="@drawable/bg_selector"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_zhiling_taiya"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView2" />

            <TextView
                android:gravity="center"
                android:textColor="#333"
                android:textSize="16sp"
                android:text="胎压阀值"
                android:layout_toRightOf="@+id/imageView2"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                />
        </RelativeLayout>
        <View
            android:background="#666"
            android:layout_width="match_parent"
            android:layout_height="1px">
        </View>

        <RelativeLayout
            android:id="@+id/relative_learn"
            android:orientation="horizontal"
            android:background="@drawable/bg_selector"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_zhiling_xuexi"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView3" />

            <TextView
                android:gravity="center"
                android:textColor="#333"
                android:textSize="16sp"
                android:text="学习指令"
                android:layout_toRightOf="@+id/imageView3"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
              />
        </RelativeLayout>
        <View
            android:background="#666"
            android:layout_width="match_parent"
            android:layout_height="1px">
        </View>

        <RelativeLayout
            android:id="@+id/relative_qury"
            android:orientation="horizontal"
            android:background="@drawable/bg_selector"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_zhiling_chaxun"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView4" />

            <TextView
                android:gravity="center"
                android:textColor="#333"
                android:textSize="16sp"
                android:text="查询胎压"
                android:layout_toRightOf="@+id/imageView4"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
              />
        </RelativeLayout>
        <View
            android:background="#666"
            android:layout_width="match_parent"
            android:layout_height="1px">
        </View>

        <RelativeLayout
            android:id="@+id/relative_change"
            android:orientation="horizontal"
            android:background="@drawable/bg_selector"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_zhiling_huanluntai"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView5" />

            <TextView
                android:gravity="center"
                android:textColor="#333"
                android:textSize="16sp"
                android:text="换轮胎指令"
                android:layout_toRightOf="@+id/imageView5"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
               />
        </RelativeLayout>
        <View
            android:background="#666"
            android:layout_width="match_parent"
            android:layout_height="1px">
        </View>

        <RelativeLayout
            android:id="@+id/relative_default"
            android:orientation="horizontal"
            android:background="@drawable/bg_selector"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_zhiling_huifushezhi"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView6" />

            <TextView
                android:gravity="center"
                android:textColor="#333"
                android:textSize="16sp"
                android:text="恢复默认设置"
                android:layout_toRightOf="@+id/imageView6"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                 />
        </RelativeLayout>
        <View
            android:background="#666"
            android:layout_width="match_parent"
            android:layout_height="1px">
        </View>

        <RelativeLayout
            android:id="@+id/relative_cancel"
            android:orientation="horizontal"
            android:background="@drawable/bg_selector"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_zhiling_huifushezhi"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView7" />

            <TextView
                android:gravity="center"
                android:textColor="#333"
                android:textSize="16sp"
                android:text="取消报警"
                android:layout_toRightOf="@+id/imageView7"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                />
        </RelativeLayout>
        <View
            android:background="#666"
            android:layout_width="match_parent"
            android:layout_height="1px">
        </View>


    </LinearLayout>
</LinearLayout>