<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageView
            android:padding="4dp"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:id="@+id/image_quitquerry"
            android:src="@drawable/icon_taiya_return"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:gravity="center"
            android:textColor="#333"
            android:textSize="20sp"
            android:text="指令查询"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView2" />

    </RelativeLayout>
    <View
        android:background="#666"
        android:layout_width="match_parent"
        android:layout_height="1px">
    </View>
    <LinearLayout
        android:layout_marginTop="26dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <View
            android:background="#666"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>
        <RelativeLayout

            android:background="#fff"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <View
                android:background="#666"
                android:layout_width="1px"
                android:layout_height="match_parent"></View>
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:id="@+id/image_start"
                android:src="@drawable/icon_lishihuifang_date"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:paddingLeft="6dp"
                android:background="#eee"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/image_start"
                android:textSize="14sp"
                android:layout_marginLeft="8dp"
                android:id="@+id/text_order_start"
                android:hint="起始日期"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <View
                android:layout_alignParentEnd="true"
                android:background="#666"
                android:layout_width="1px"
                android:layout_height="match_parent"></View>
        </RelativeLayout>
        <View
            android:background="#666"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>
        <RelativeLayout
            android:background="#fff"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <View
                android:background="#666"
                android:layout_width="1px"
                android:layout_height="match_parent"></View>
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:id="@+id/image_stop"
                android:src="@drawable/icon_lishihuifang_date"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:paddingLeft="6dp"
                android:background="#eee"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/image_stop"
                android:textSize="14sp"
                android:layout_marginLeft="8dp"
                android:id="@+id/text_order_stop"
                android:hint="截止日期"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <View
                android:layout_alignParentEnd="true"
                android:background="#666"
                android:layout_width="1px"
                android:layout_height="match_parent"></View>
        </RelativeLayout>
        <View
            android:background="#666"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>

    </LinearLayout>
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/button_querry_order"
        android:background="@drawable/btnensure_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="20dp"
        android:id="@+id/recycleview_querry"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>