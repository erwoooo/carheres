<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageView
            android:padding="4dp"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:id="@+id/image_quitgw"
            android:src="@drawable/icon_taiya_return"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="#333"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:text="模式设置"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        android:background="#666"
        android:layout_width="match_parent"
        android:layout_height="1px">
    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <TextView
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:textColor="#333"
            android:textSize="16sp"
            android:text="选择模式"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
            
            <Spinner

                android:padding="4dp"
                android:spinnerMode="dropdown"
                android:overlapAnchor="false"
                android:id="@+id/spinner_gw"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="140dp"
                android:layout_height="wrap_content">

            </Spinner>
        
    </RelativeLayout>
    <View
        android:background="#666"
        android:layout_width="match_parent"
        android:layout_height="1px">
    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:id="@+id/linner_gw_order1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:focusableInTouchMode="true"
                android:id="@+id/gw_relative_set"
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:textSize="12sp"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/gw_edit_settime"
                    android:text="注：范围0-999分钟，设置0时标识定时关闭"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3" />

                <EditText
                    android:maxLength="3"
                    android:gravity="center"
                    android:id="@+id/gw_edit_settime"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_editgw"
                    android:layout_width="100dp"
                    android:numeric="integer"
                    android:layout_height="26dp"
                    android:layout_alignBaseline="@+id/textView3"
                    android:layout_alignBottom="@+id/textView3"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>
            <View
                android:background="@drawable/bg_view"
                android:layout_width="match_parent"
                android:layout_height="30px"/>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:id="@+id/linerlayout_gw_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/checkbox_gw_week1"
                        android:button="@drawable/gw_checkbox_selector"
                        android:padding="2dp"
                        android:textColor="#666"
                        android:text="星期一"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:id="@+id/checkbox_gw_week2"
                        android:textColor="#666"
                        android:text="星期二"
                        android:button="@drawable/gw_checkbox_selector"
                        android:padding="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:id="@+id/checkbox_gw_week3"
                        android:textColor="#666"
                        android:text="星期三"
                        android:button="@drawable/gw_checkbox_selector"
                        android:padding="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/checkbox_gw_week4"
                        android:button="@drawable/gw_checkbox_selector"
                        android:padding="2dp"
                        android:textColor="#666"
                        android:text="星期四"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:id="@+id/checkbox_gw_week5"
                        android:button="@drawable/gw_checkbox_selector"
                        android:padding="2dp"
                        android:textColor="#666"
                        android:text="星期五"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:id="@+id/checkbox_gw_week6"
                        android:button="@drawable/gw_checkbox_selector"
                        android:padding="2dp"
                        android:textColor="#666"
                        android:text="星期六"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:id="@+id/checkbox_gw_week7"
                        android:button="@drawable/gw_checkbox_selector"
                        android:padding="2dp"
                        android:textColor="#666"
                        android:text="星期日"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relative_week_time"
                    android:background="@drawable/bg_editgw"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="16sp"
                        android:gravity="center"
                        android:text="00"
                        android:layout_centerVertical="true"
                        android:id="@+id/text_week_hour"
                        android:layout_width="66dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:textColor="#333"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text=":"
                        android:layout_alignRight="@+id/text_week_hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_alignParentRight="true"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:text="00"
                        android:layout_centerVertical="true"
                        android:id="@+id/text_week_min"
                        android:layout_width="50dp"
                        android:layout_height="match_parent" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_view"
                android:layout_width="match_parent"
                android:layout_height="30px"/>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/linerlayout_gw_clock"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
            <View
                android:background="#666"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <CheckBox
                    android:id="@+id/checkbox_gw_clock1"
                    android:button="@drawable/gw_checkbox_selector"
                    android:padding="2dp"
                    android:layout_centerVertical="true"
                    android:textColor="#666"
                    android:text="第一组"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/relative_clock_time1"
                    android:background="@drawable/bg_editgw"
                    android:layout_width="120dp"
                    android:layout_height="30dp">
                    <TextView
                        android:textSize="16sp"
                        android:gravity="center"
                        android:text="00"
                        android:layout_centerVertical="true"
                        android:id="@+id/text_week_hour1"
                        android:layout_width="66dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:textColor="#333"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text=":"
                        android:layout_alignRight="@+id/text_week_hour1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_alignParentRight="true"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:text="00"
                        android:layout_centerVertical="true"
                        android:id="@+id/text_week_min1"
                        android:layout_width="50dp"
                        android:layout_height="match_parent" />

                </RelativeLayout>
            </RelativeLayout>
                <View
                    android:background="#666"
                    android:layout_width="match_parent"
                    android:layout_height="1px"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <CheckBox
                    android:id="@+id/checkbox_gw_clock2"
                    android:button="@drawable/gw_checkbox_selector"
                    android:padding="2dp"
                    android:layout_centerVertical="true"
                    android:textColor="#666"
                    android:text="第二组"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/relative_clock_time2"
                    android:background="@drawable/bg_editgw"
                    android:layout_width="120dp"
                    android:layout_height="30dp">
                    <TextView
                        android:textSize="16sp"
                        android:gravity="center"
                        android:text="00"
                        android:layout_centerVertical="true"
                        android:id="@+id/text_week_hour2"
                        android:layout_width="66dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:textColor="#333"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text=":"
                        android:layout_alignRight="@+id/text_week_hour2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_alignParentRight="true"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:text="00"
                        android:layout_centerVertical="true"
                        android:id="@+id/text_week_min2"
                        android:layout_width="50dp"
                        android:layout_height="match_parent" />

                </RelativeLayout>
            </RelativeLayout>
            <View
                android:background="#666"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <CheckBox
                    android:id="@+id/checkbox_gw_clock3"
                    android:button="@drawable/gw_checkbox_selector"
                    android:padding="2dp"
                    android:layout_centerVertical="true"
                    android:textColor="#666"
                    android:text="第三组"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/relative_clock_time3"
                    android:background="@drawable/bg_editgw"
                    android:layout_width="120dp"
                    android:layout_height="30dp">
                    <TextView
                        android:textSize="16sp"
                        android:gravity="center"
                        android:text="00"
                        android:layout_centerVertical="true"
                        android:id="@+id/text_week_hour3"
                        android:layout_width="66dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:textColor="#333"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text=":"
                        android:layout_alignRight="@+id/text_week_hour3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_alignParentRight="true"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:text="00"
                        android:layout_centerVertical="true"
                        android:id="@+id/text_week_min3"
                        android:layout_width="50dp"
                        android:layout_height="match_parent" />

                </RelativeLayout>
            </RelativeLayout>
            <View
                android:background="#666"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <CheckBox
                    android:id="@+id/checkbox_gw_clock4"
                    android:button="@drawable/gw_checkbox_selector"
                    android:padding="2dp"
                    android:layout_centerVertical="true"
                    android:textColor="#666"
                    android:text="第四组"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/relative_clock_time4"
                    android:background="@drawable/bg_editgw"
                    android:layout_width="120dp"
                    android:layout_height="30dp">
                    <TextView
                        android:textSize="16sp"
                        android:gravity="center"
                        android:text="00"
                        android:layout_centerVertical="true"
                        android:id="@+id/text_week_hour4"
                        android:layout_width="66dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:textColor="#333"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text=":"
                        android:layout_alignRight="@+id/text_week_hour4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_alignParentRight="true"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:text="00"
                        android:layout_centerVertical="true"
                        android:id="@+id/text_week_min4"
                        android:layout_width="50dp"
                        android:layout_height="match_parent" />

                </RelativeLayout>
            </RelativeLayout>
            <View

                android:background="@drawable/bg_view"
                android:layout_width="match_parent"
                android:layout_height="30px"/>



        </LinearLayout>

        <Button
            android:id="@+id/button_send_gw"
            android:background="@drawable/btnensure_selector"
            android:layout_marginBottom="50dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </RelativeLayout>

</LinearLayout>