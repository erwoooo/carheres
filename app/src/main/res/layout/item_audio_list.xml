<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <View
            android:layout_marginLeft="16dp"
            android:background="#eef8b62d"
            android:layout_width="1px"
            android:layout_height="match_parent">
        </View>
        <ImageView
            android:layout_marginLeft="9dp"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:src="@drawable/round_icon"
            android:layout_width="14dp"
            android:layout_height="14dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/liner_audio"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="20dp"
                android:textSize="14sp"
                android:textColor="#999"
                android:id="@+id/text_audio_time"
                android:text="2018/07/07 15:20:27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:id="@+id/relative_audio_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/image_play_audio"
                    android:src="@drawable/qpc_bg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/audio_play_img"
                    android:layout_marginLeft="44dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/voice_icon"
                    android:layout_width="16dp"
                    android:layout_height="24dp" />
                <RelativeLayout
                    android:layout_toRightOf="@+id/image_play_audio"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="42dp" >
                    <ImageView

                        android:id="@+id/image_red_audio"
                        android:src="@drawable/bg_audio_red"
                        android:layout_width="10dp"
                        android:layout_height="10dp" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <CheckBox
          android:visibility="gone"
          android:id="@+id/audio_delete_check"
          android:button="@drawable/audio_item_selector"
          android:layout_marginRight="20dp"
          android:layout_centerVertical="true"
          android:layout_alignParentRight="true"
          android:layout_width="wrap_content"
          android:layout_height="22dp" />
  </RelativeLayout>
</LinearLayout>