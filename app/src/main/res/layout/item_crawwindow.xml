<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="6dp"
    android:paddingBottom="30dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@drawable/chache_window"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="围栏名称:"
                android:textColor="#333"
                android:textSize="14sp"
                android:id="@+id/text_crawltypes1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView

                android:text="断电报警"
                android:textColor="#333"
                android:textSize="14sp"
                android:layout_toRightOf="@+id/text_crawltypes1"
                android:id="@+id/text_crawltypes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="围栏状态:"
            android:textColor="#333"
            android:textSize="14sp"
            android:id="@+id/text_crawlstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#333"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:text="打开"
            android:layout_centerVertical="true"
            android:id="@+id/text_crawlboolen"
            android:layout_toRightOf="@+id/text_crawlstate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="围栏类型:"
            android:textColor="#333"
            android:textSize="14sp"
            android:id="@+id/text_crawltype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#333"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:text="进围栏"
            android:layout_centerVertical="true"
            android:id="@+id/text_crawlsss"
            android:layout_toRightOf="@+id/text_crawltype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="围栏大小:"
            android:textColor="#333"
            android:textSize="14sp"
            android:id="@+id/text_crawltypelit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:singleLine="false"
            android:ellipsize="end"
            android:textColor="#333"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:text="当前位置"
            android:layout_centerVertical="true"
            android:id="@+id/text_warnlocastlits"
            android:layout_toRightOf="@+id/text_crawltypelit"
            android:layout_width="210dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="报警方式:"
            android:textColor="#333"
            android:textSize="14sp"
            android:id="@+id/text_crawltypewarn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:singleLine="false"
            android:ellipsize="end"
            android:textColor="#333"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:text="平台"
            android:layout_centerVertical="true"
            android:id="@+id/text_warnlocastlitwarn"
            android:layout_toRightOf="@+id/text_crawltypewarn"
            android:layout_width="210dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="围栏时间:"
            android:textColor="#333"
            android:textSize="14sp"
            android:id="@+id/text_crawltypetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:singleLine="false"
            android:ellipsize="end"
            android:textColor="#333"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:text="当前位置"
            android:layout_centerVertical="true"
            android:id="@+id/text_warnlocastime"
            android:layout_toRightOf="@+id/text_crawltypetime"
            android:layout_width="210dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>