<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginLeft="6dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/image_item_tyreshow"
            android:padding="4dp"
            android:layout_width="30dp"
            android:src="@drawable/icon_taiya_car"
            android:layout_height="30dp" />
       <LinearLayout
           android:layout_toRightOf="@+id/image_item_tyreshow"
           android:layout_marginLeft="4dp"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <TextView
               android:layout_marginTop="4dp"
               android:textSize="14sp"
               android:id="@+id/item_textname_trye"
               android:text="车辆"
               android:textColor="#333"
               android:gravity="center_vertical"
               android:layout_weight="1"
               android:layout_width="match_parent"
               android:layout_height="match_parent" />
           <TextView
               android:layout_marginBottom="4dp"
               android:textSize="13sp"
               android:text="编号"
               android:textColor="#666"
               android:gravity="center_vertical"
               android:id="@+id/item_textno_trye"
               android:layout_weight="1"
               android:layout_width="match_parent"
               android:layout_height="match_parent" />
       </LinearLayout>
        <TextView
            android:textColor="#666666"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:id="@+id/text_caron"
            android:textSize="16sp"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <View
        android:layout_marginTop="2dp"
        android:background="#666"
        android:layout_width="match_parent"
        android:layout_height="1px"></View>

</LinearLayout>