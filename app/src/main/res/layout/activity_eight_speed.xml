<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/text_eight_title"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="#333"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:text="超速报警"
            android:layout_weight="8"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:padding="4dp"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:id="@+id/image_quit_speed"
            android:src="@drawable/icon_taiya_return"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </RelativeLayout>
    <View
        android:background="#666"
        android:layout_width="match_parent"
        android:layout_height="1px"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:visibility="gone"
            android:focusableInTouchMode="true"
            android:id="@+id/relative_eight_speed"
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <EditText
                android:maxLength="3"
                android:gravity="center"
                android:id="@+id/eight_edit_settime"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_editgw"
                android:layout_width="100dp"
                android:numeric="integer"
                android:layout_height="26dp" />

            <TextView
                android:textSize="12sp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/eight_edit_settime"
                android:text="请输入超速的范围(1-300km/h)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_alignParentBottom="true"
                android:background="#666"
                android:layout_width="match_parent"
                android:layout_height="1px"></View>
        </RelativeLayout>

        <RelativeLayout

            android:id="@+id/relative_eight_rest"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="16sp"
                android:textColor="#333"
                android:text="设备重启"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:focusableInTouchMode="true"
            android:id="@+id/relative_eight_dis"
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <EditText
                android:maxLength="3"
                android:gravity="center"
                android:id="@+id/eight_edit_setdis"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_editgw"
                android:layout_width="100dp"
                android:numeric="integer"
                android:layout_height="26dp" />

            <TextView
                android:textSize="12sp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/eight_edit_setdis"
                android:text="里程读数设置(单位:百米)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_alignParentBottom="true"
                android:background="#666"
                android:layout_width="match_parent"
                android:layout_height="1px"></View>
        </RelativeLayout>
        <Button
            android:id="@+id/button_send_eight"
            android:background="@drawable/btnensure_selector"
            android:layout_marginBottom="50dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="50dp" />


    </RelativeLayout>

</LinearLayout>