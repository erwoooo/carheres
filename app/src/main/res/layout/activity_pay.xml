<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageView
            android:padding="4dp"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:id="@+id/image_payservice"
            android:src="@drawable/icon_taiya_return"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="#333"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:text="服务充值"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>
    <View
        android:background="#333"
        android:layout_width="match_parent"
        android:layout_height="1px">
    </View>
    <TextView
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_edit"
        android:textColor="#333"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:textSize="16sp"
        android:gravity="center"
        android:text="@string/pay_tip"
        android:layout_width="match_parent"
        android:layout_height="64dp" />

    <View
        android:layout_marginTop="26dp"
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/pay_rel_one"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textColor="#999999"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="一年"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/pay_image_one"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_baojingxiaoxi_selected"
            android:layout_width="22dp"
            android:layout_height="22dp" />
    </RelativeLayout>
    <View
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:id="@+id/pay_rel_two"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:textColor="#999999"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="两年"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/pay_image_two"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_baojingxiaoxi_selected"
            android:layout_width="22dp"
            android:layout_height="22dp" />
    </RelativeLayout>
    <View
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:id="@+id/pay_rel_forever"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:textColor="#999999"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="永久"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/pay_image_foever"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_baojingxiaoxi_selected"
            android:layout_width="22dp"
            android:layout_height="22dp" />
    </RelativeLayout>
    <View
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:id="@+id/pay_rel_auto"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:textColor="#999999"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="自定义"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/pay_image_auto"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_baojingxiaoxi_selected"
            android:layout_width="22dp"
            android:layout_height="22dp" />
    </RelativeLayout>
    <View
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/pay_liner_data"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="46dp">
        <View
            android:background="#666"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>
        <RelativeLayout
            android:background="#fff"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <View
                android:background="#666"
                android:layout_width="1px"
                android:layout_height="match_parent"></View>
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:id="@+id/pay_image_start"
                android:src="@drawable/icon_lishihuifang_date"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:paddingLeft="6dp"
                android:background="#eee"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/pay_image_start"
                android:textSize="14sp"
                android:layout_marginLeft="8dp"
                android:id="@+id/pay_text_start"
                android:hint="到期日期"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <View
                android:layout_alignParentEnd="true"
                android:background="#666"
                android:layout_width="1px"
                android:layout_height="match_parent"></View>
        </RelativeLayout>
        <View
            android:background="#666"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>
    </LinearLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="60dp">
      <TextView
          android:layout_marginRight="100dp"
          android:layout_alignParentRight="true"
          android:textSize="14sp"
          android:textColor="#333"
          android:text="需支付"
          android:layout_marginBottom="10dp"
          android:layout_alignParentBottom="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      <TextView
          android:id="@+id/pay_text1"
          android:textColor="#FF9913"
          android:layout_marginRight="86dp"
          android:layout_alignParentRight="true"
          android:layout_alignParentBottom="true"
          android:text="¥"
          android:textSize="14sp"
          android:layout_marginBottom="10dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      <TextView
          android:textSize="24sp"
          android:id="@+id/pay_text_num"
          android:layout_alignParentRight="true"
          android:layout_marginRight="16dp"
          android:textColor="#FF9913"
          android:layout_alignParentBottom="true"
          android:text="0"
          android:layout_marginBottom="10dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
  </RelativeLayout>
    <View
        android:background="#666"
        android:layout_width="match_parent"
        android:layout_height="1px"></View>
  <LinearLayout
      android:padding="10dp"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <TextView
          android:layout_weight="1"
          android:paddingLeft="10dp"
          android:background="@color/bg_color"
          android:layout_marginLeft="10dp"
          android:drawablePadding="10dp"
          android:layout_gravity="center"
          android:textSize="16sp"
          android:drawableLeft="@drawable/weixin"
          android:text="微信"

          android:id="@+id/pay_wx_sure"
          android:layout_width="200dp"
          android:layout_height="wrap_content" />
      <TextView
          android:id="@+id/pay_zfb_sure"
          android:layout_weight="1"
          android:paddingLeft="10dp"
          android:background="@color/bg_color"
          android:layout_marginLeft="10dp"
          android:drawablePadding="10dp"
          android:layout_gravity="center"
          android:textSize="16sp"
          android:drawableLeft="@drawable/zhifubao"
          android:text="支付宝"
          android:layout_width="200dp"
          android:layout_height="wrap_content" />

  </LinearLayout>

</LinearLayout>